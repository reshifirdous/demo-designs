  {{ create.vlan(612, "name DIA-Provisioning", 'Active', site_name, "DIA-Provisioning", tenant_name, vlan_role) }}

devices:
  {{ create.device(device_name_a, device_type, device_role, site_name, tenant_name, device_platform, device_status) }}
